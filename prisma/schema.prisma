generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id       Int      @id @default(autoincrement())
    email    String   @unique
    name     String?
    password String
    recipes  Recipe[]
}

model Recipe {
    id           Int       @id @default(autoincrement())
    title        String
    description  String?
    ingredients  String?
    instructions String?
    authorId     Int?
    image        String
    createdAt    DateTime  @default(now())
    updatedAt    DateTime? @updatedAt
    author       User?     @relation(fields: [authorId], references: [id])
}
